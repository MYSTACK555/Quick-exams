<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <script src = "/js/changeLang.js">
</head>

<body>
    <header>
        <nav>

            <div class="logo">
                <a href="/">
                    <img src="/asset/exam.svg" alt="quick-exams logo" width="50" />
                </a>
            </div>
            <ul>
                <li><a href="/">Accueil</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/service">Services</a></li>
            </ul>
            <label for="lang">{{languages.traductionFile.selectLanguage}}</label>

            <select name="lang" id="lang">
            {% if languages.language == "fr"%}
                {% for lang in supportedLanguages %}
                <option value="{{lang}}">{{lang}}</option>
                {% endfor %}
            {% else %}
                {% for lang in supportedLanguages|reverse %}
                <option value="{{lang}}">{{lang}}</option>
                {% endfor %}
            {% endif %}
            </select>
        </nav>

    </header>
    <div class="container">

        <nav>

            <a href="#">sasdsa</a>
        </nav>
        {{content|safe}}
    </div>
</body>

</html>